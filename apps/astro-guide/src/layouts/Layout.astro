---
import "../styles/global.css";

interface Props {
	title?: string;
}

const { title = "Discovery Purple Guide" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="The complete guide to maximizing Discovery Purple Suite benefits" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <title>{title}</title>
  </head>
  <body class="bg-slate-50 text-slate-900">
    <slot />
  </body>
</html>

